{
  "manifest_version": 3,
  "name": "SeeThroughAI",
  "version": "1.0.0",
  "description": "Detect AI-generated content using machine learning",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "notifications",
    "desktopCapture",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "css": ["styles/content.css"]
    }
  ],
  "action": {
    "default_popup": "extension/popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["models/*", "assets/*", "lib/*", "smolvlm-classifier-onnx/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
